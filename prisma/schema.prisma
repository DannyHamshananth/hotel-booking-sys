generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Room {
  id        Int      @id @default(autoincrement())
  title_1   String
  title_2   String
  desc      String
  persons   Int
  amount    Decimal  @db.Decimal(8, 2)
}